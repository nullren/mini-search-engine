<?xml version="1.0"?>
<configuration>
    <!-- Include the plugins needed -->
    <property>
        <name>plugin.includes</name>
        <!-- Enable http protocol, HTML parser, and Elasticsearch indexer, plus what's needed -->
        <value>protocol-http|urlfilter-regex|parse-(html|tika)|index-(basic|anchor|elastic)|scoring-opic|crawl-db|linkdb|segment|fetcher</value>
    </property>

    <!-- Elasticsearch indexer configuration -->
    <property>
        <name>elastic.host</name>
        <!-- Points to the service name 'elasticsearch' from docker-compose, on port 9200 -->
        <value>elasticsearch</value>
    </property>

    <property>
        <name>elastic.port</name>
        <value>9200</value>
    </property>

    <!-- Additional recommended settings -->
    <property>
        <name>http.agent.name</name>
        <value>MyNutchBot</value>
    </property>

    <property>
        <name>fetcher.threads.fetch</name>
        <value>10</value>
    </property>

    <property>
        <name>fetcher.max.crawl.delay</name>
        <value>5</value>
    </property>

</configuration>
